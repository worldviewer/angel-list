<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Bootstrap -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">

	<title>Your Categories and Locations</title>
	<!-- LATER: ADD IN EXPLICIT COMPANY SEARCHES -->
</head>
<body>

	<div class="container">

		<form class="form-signin" action="/user" method="POST">
			<h2 class="form-signin-heading">I want to work in ...</h2>

			<ul class="list-group">
				<% locations.forEach(function(spot) { %>
				<div class="row">
					<div class="input-group">
						<span class="input-group-addon">
        					<input type="checkbox" id="spot_<%= spot.id %>" name="spot_<%= spot.id %>">
        					<label for="spot_<%= spot.id %>"><span class="glyphicon glyphicon-remove-circle"></span></label>
						</span>				
						<li class="list-group-item"><%= spot.name %> </li>
					</div>
				</div>
				<% }) %>
			</ul>

			<div class="row">
				<input class="form-control" type="text" name="location" placeholder="Add Location">
			</div>

			<h2 class="form-signin-heading">Search categories ...</h2>

			<ul class="list-group">
				<% categories.forEach(function(category) { %>
				<div class="row">
					<div class="input-group">
						<span class="input-group-addon">
        					<input type="checkbox" id="cat_<%= category.id %>" name="cat_<%= category.id %>">
        					<label for="cat_<%= category.id %>"><span class="glyphicon glyphicon-remove-circle"></span></label>
						</span>				
						<li class="list-group-item"><%= category.category_name %> </li>
					</div>
				</div>
				<% }) %>
			</ul>

			<div class="row">
				<input class="form-control" type="text" name="category" placeholder="Add Category">
			</div>

			<br>
			<div class="row">
				<button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
			</div>
		</form>

    </div> <!-- /container -->

</body>
</html>
