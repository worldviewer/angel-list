<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Bootstrap -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

	<!-- Optional Typeahead Search CSS -->
    <link rel="stylesheet" href="jquery.typeahead.css">
 
    <!-- Required Typeahead JavaScript -->
    <script src="jquery-2.1.3.min.js"></script>
    <script src="jquery.typeahead.js"></script>

    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">

    <!-- My own jQuery for this page -->
    <script src="index.js"></script>

	<title>Angel Search</title>
</head>
<body>

	<div class="container">

		<form class="form-signin" action="/search" method="POST">
			<h2 class="form-signin-heading">Location Constraints</h2>

			<ul class="list-group">
				<% locations.forEach(function(spot) { %>
					<li class="list-group-item"><%= spot.name %> </li>
				<% }); %>
			</ul>

			<h2 class="form-signin-heading">Category Constraints</h2>

			<ul class="list-group">
				<% categories.forEach(function(category) { %>
					<li class="list-group-item"><%= category.category_name %> </li>
				<% }); %>
			</ul>

			<br>

			<!-- Typeahead HTML -->
		    <div class="typeahead-container">
		    	<div class="input group">

		            <span class="typeahead-query">
		                <input id="category-search" name="category" type="search" class="form-control" placeholder="Constrain Category Search" autocomplete="off">
		            </span>

		        </div>
		    </div>

			<br>

			<div id="submit-button" class="form-signin-heading">
				<button class="btn btn-lg btn-primary btn-block" type="submit" class="typeahead-button">Submit</button>
			</div>

		</form>

    </div> <!-- /container -->

</body>
</html>
